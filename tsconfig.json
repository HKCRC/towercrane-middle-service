{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "inlineSourceMap":true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "stripInternal": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "noResolve": false,
    "isolatedModules": false,
    "pretty": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [ "./typings", "./node_modules/@types"],
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "exclude": [
    "*.js",
    "*.ts",
    "dist",
    "node_modules",
    "node_modules/.prisma/**/*",
    "node_modules/@prisma/**/*",
    "**/node_modules/.prisma/**",
    "**/node_modules/@prisma/**",
    "node_modules/.prisma/client/index.d.ts",
    "test"
  ]
}
