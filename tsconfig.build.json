{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "noResolve": false,
    "isolatedModules": false,
    "noEmitOnError": false
  },
  "exclude": [
    "*.js",
    "*.ts",
    "dist",
    "node_modules",
    "test",
    "**/*.test.ts",
    "**/*.spec.ts"
  ],
  "include": [
    "src/**/*"
  ]
}
